<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawer_background"
    android:orientation="vertical"
    tools:context=".activities.AboutActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_padding_16"
        android:background="@color/black25">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="260dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/hemacount_title"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_padding_8"/>

        <ImageView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:src="@drawable/hemacount"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_padding_8"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:layout_marginTop="@dimen/margin_padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white"
            android:text="@string/creada_por"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/creadores"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/white"/>
        <TextView
            android:layout_marginTop="@dimen/margin_padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white"
            android:text="@string/colaboracion_con"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/colaboradores"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>