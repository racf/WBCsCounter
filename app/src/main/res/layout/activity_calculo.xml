<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CalculoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="left"
            android:text="@string/asociar_a_paciente"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/subtitulo_3"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etCantidad"
                style="@style/EditTextStyleOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/btnCalcular"
                android:layout_toStartOf="@+id/btnCalcular"
                android:hint="@string/input_cantidad_total"
                android:inputType="phone" />

            <Button
                android:id="@+id/btnCalcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/calcular"
                style="@style/ButtonStyleAceptar"
                />
        </RelativeLayout>

        <ListView
            android:id="@+id/listViewHeaderTabla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </ListView>
        <View
            android:layout_height="1dip"
            android:layout_width="match_parent"
            android:background="@color/red80"/>
        <ListView
            android:id="@+id/listViewTabla"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="2dp">
        </ListView>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tablaResultado">
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/blue"
                android:id="@+id/tablaHeaderResultado">
                <TextView
                    android:id="@+id/tvVacio"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    style="@style/HeaderStyle"
                    android:gravity="center"
                    android:text=""/>
                <TextView
                    android:id="@+id/tvConNrbc"
                    style="@style/HeaderStyle"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="@string/tabla_header_con_nrbc"/>
                <TextView
                    android:id="@+id/tvSinNRbc"
                    style="@style/HeaderStyle"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="@string/tabla_header_sin_nrbc"/>
            </TableRow>
            <View
                android:layout_height="1dip"
                android:layout_width="match_parent"
                android:background="@color/red80"/>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:id="@+id/tvTotalWbc"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="@string/tabla_total_wbc"/>
                <TextView
                    android:id="@+id/tvTotalConNrbc"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@color/gray"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/tvTotalSinNRbc"
                    android:textColor="@color/black"
                    android:background="@color/gray_dark"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    />
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="12dp"
                style="@style/ButtonStyleGuardar"
                android:layout_centerInParent="true"
                android:drawableLeft="@android:drawable/ic_menu_save"
                android:text="@string/guardar"/>

            <Button
                android:id="@+id/btnExportar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/ButtonStyleExportar"
                android:layout_centerInParent="true"
                android:drawableLeft="@android:drawable/ic_menu_send"
                android:text="@string/exportar"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>