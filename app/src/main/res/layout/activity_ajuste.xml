<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AjusteActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_padding_16">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:text="@string/cantidad_alerta"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            />
        <RelativeLayout
            android:layout_marginTop="@dimen/margin_padding_8"
            android:layout_marginBottom="@dimen/margin_padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spAlertarCantidad"
                style="@style/Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_padding_6"
                android:clickable="false"
                android:contentDescription="@string/empty"
                android:src="@drawable/baseline_arrow_drop_down_black_18" />
        </RelativeLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:text="@string/configuracion_botones"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_padding_16"
            android:textColor="@color/colorAccent"
            />
        <CheckBox
            android:id="@+id/cbActivarVibracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vibrar"
            android:layoutDirection="rtl"
            android:layout_marginTop="@dimen/margin_padding_8"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/margin_padding_8"
            android:layout_marginTop="@dimen/margin_padding_8"
            android:layout_marginBottom="@dimen/margin_padding_8"
            android:background="@color/gray_dark" />
        <CheckBox
            android:id="@+id/cbActivarSonido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:text="@string/sonido" />
    </LinearLayout>
</ScrollView>