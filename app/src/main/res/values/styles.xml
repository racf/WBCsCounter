<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="EditTextStyleOne">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ButtonStyleAceptar">
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/button_background_aceptar</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonStyleResultado">
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:background">@drawable/button_background_aceptar</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyleCancelar">
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/button_background_cancelar</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyleCelula">
        <item name="android:background">@drawable/button_background_celula</item>
        <item name="android:textColor">@color/red</item>
    </style>


    <style name="ButtonStyleGuardar">
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/button_background_guardar</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyleExportar">
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/button_background_exportar</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
