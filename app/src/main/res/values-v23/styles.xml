<?xml version="1.0" encoding="utf-8"?>
<resources>
<!-- Base application theme. -->
<style name="AppThemeDrawer" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
</style>

<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
</style>


<style name="EditTextStyleOne">
    <item name="android:textColor">@color/black</item>
    <item name="android:textColorHint">@color/gray_dark</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
</style>

<style name="ButtonStyleAceptar">
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:background">@drawable/button_background_aceptar</item>
    <item name="android:textColor">@color/white</item>
</style>
<style name="ButtonStyleResultado">
    <item name="android:paddingRight">@dimen/margin_padding_16</item>
    <item name="android:paddingLeft">@dimen/margin_padding_16</item>
    <item name="android:background">@drawable/button_background_aceptar</item>
    <item name="android:textColor">@color/white</item>

    <item name="android:textSize">14sp</item>
    <item name="android:layout_margin">@dimen/margin_padding_8</item>
</style>



<style name="ButtonStyleCancelar">
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:background">@drawable/button_background_cancelar</item>
    <item name="android:textColor">@color/white</item>
</style>

<style name="ButtonStyleCelula">
    <item name="android:background">@drawable/button_background_celula</item>
    <item name="android:textColor">@color/red</item>
</style>


<style name="ButtonStyleGuardar">
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:background">@drawable/button_background_guardar</item>
    <item name="android:textColor">@color/white</item>
</style>
<style name="TextViewCelulaCantidad">
    <item name="android:background">@drawable/textview_background_celula_cantidad</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center</item>
</style>
<style name="TextViewNombreCelula">
    <item name="android:background">@drawable/textview_background_celula_nombre</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center</item>
    <item name="android:textStyle">bold</item>
</style>
<style name="ButtonStyleExportar">
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:background">@drawable/button_background_exportar</item>
    <item name="android:textColor">@color/white</item>
</style>

<style name="HeaderStyle">
    <item name="android:textColor">@color/white</item>
</style>
<!--Buttons Bootstrap-->
<style name="ButtonTextWhite">
    <item name="android:textColor">@color/white</item>
    <item name="android:paddingRight">@dimen/margin_padding_16</item>
    <item name="android:paddingLeft">@dimen/margin_padding_16</item>
    <item name="android:paddingStart">@dimen/margin_padding_16</item>
    <item name="android:paddingEnd">@dimen/margin_padding_16</item>
</style>
<style name="ButtonTextBody">
    <item name="android:textColor">@color/body</item>
    <item name="android:paddingRight">@dimen/margin_padding_16</item>
    <item name="android:paddingLeft">@dimen/margin_padding_16</item>
    <item name="android:paddingStart">@dimen/margin_padding_16</item>
    <item name="android:paddingEnd">@dimen/margin_padding_16</item>
</style>
<style name="ButtonPrimary" parent="ButtonTextWhite">
    <item name="android:background">@drawable/button_primary</item>
</style>
<style name="ButtonSecondary" parent="ButtonTextWhite">
    <item name="android:background">@drawable/button_secondary</item>
</style>
<style name="ButtonSuccess" parent="ButtonTextWhite">
    <item name="android:background">@drawable/button_success</item>
</style>
<style name="ButtonDanger" parent="ButtonTextWhite">
    <item name="android:background">@drawable/button_danger</item>
</style>
<style name="ButtonWarning" parent="ButtonTextBody">
    <item name="android:background">@drawable/button_warning</item>
</style>
<style name="ButtonInfo" parent="ButtonTextWhite">
    <item name="android:background">@drawable/button_info</item>
</style>
<style name="ButtonLight" parent="ButtonTextBody">
    <item name="android:background">@drawable/button_light</item>
</style>
<style name="ButtonDark" parent="ButtonTextWhite">
    <item name="android:background">@drawable/button_dark</item>
</style>
<style name="Input">
    <item name="android:background">@drawable/input</item>
    <item name="android:paddingLeft">@dimen/margin_padding_12</item>
    <item name="android:paddingRight">@dimen/margin_padding_12</item>
    <item name="android:paddingTop">@dimen/margin_padding_8</item>
    <item name="android:paddingBottom">@dimen/margin_padding_8</item>
    <item name="android:paddingStart">@dimen/margin_padding_12</item>
    <item name="android:paddingEnd">@dimen/margin_padding_12</item>
    <item name="android:textColor">@color/body</item>
    <item name="android:textColorHint">@color/muted</item>
</style>
<style name="InputGroup">
    <item name="android:background">@drawable/input_group</item>
    <item name="android:paddingLeft">@dimen/margin_padding_12</item>
    <item name="android:paddingRight">@dimen/margin_padding_12</item>
    <item name="android:paddingTop">@dimen/margin_padding_8</item>
    <item name="android:paddingBottom">@dimen/margin_padding_8</item>
    <item name="android:paddingStart">@dimen/margin_padding_12</item>
    <item name="android:paddingEnd">@dimen/margin_padding_12</item>
    <item name="android:textColor">@color/body</item>
    <item name="android:textColorHint">@color/muted</item>
</style>
<style name="ButtonSecondaryGroup" parent="ButtonTextBody">
    <item name="android:background">@drawable/button_secondary_group</item>
    <item name="android:paddingTop">@dimen/margin_padding_8</item>
    <item name="android:paddingBottom">@dimen/margin_padding_8</item>
</style>
<!--Buttons Bootstrap-->
</resources>