<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item android:right="-2dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="#ced4da" />
                    <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="0dp" android:topLeftRadius="4dp" android:topRightRadius="0dp" />
                    <solid android:color="#e9ecef" />
                </shape>

            </item>
        </layer-list>
    </item>
    <item android:state_focused="true" android:state_hovered="true">

        <layer-list>
            <item android:right="-2dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="#ced4da" />
                    <solid android:color="#fff" />
                    <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="0dp" android:topLeftRadius="4dp" android:topRightRadius="0dp" />
                </shape>

            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:right="-2dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="#ced4da" />
                    <solid android:color="#fff" />
                    <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="0dp" android:topLeftRadius="4dp" android:topRightRadius="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>